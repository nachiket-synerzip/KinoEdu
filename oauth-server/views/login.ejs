<script src="components/bootstrap/docs/assets/js/jquery.js"></script>
<script src="components/bootstrap/docs/assets/js/bootstrap.min.js"></script>

<script src="components/bootstrap/docs/assets/js/holder/holder.js"></script>

<script src="js/ga.js" type="text/javascript"></script>
</body>
        </html>
