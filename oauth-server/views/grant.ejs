<body>

<div class="container-narrow">

    <div class="masthead">
        <ul class="nav nav-pills pull-right">
            <li class="active"><a href="login.html">Login</a></li>
            <li><a href="signup.html">Sign Up</a></li>


        </ul>
        <h3 class="muted"><a href="index.html">KinoEdu</a></h3>
    </div>

    <hr></hr>

    <div class="jumbotron">

        <div class="row-fluid grant">
            <div class="span4 offset4" >
                <h3>Grant Access</h3>


                <form action="/grant.html" method="post">
                    <% if(locals.status == 'failure'){ %>



                    <ul class="error">
                        <% for(var key in locals.err.errors) { %>
                        <li>
                            <%= locals.err.errors[key].type %>

                        </li>
                        <% } %>
                    </ul>
                    <% } %>
                    <% if(locals.status == 'success'){ %>
                    <b>User is asking following permissions</b>
                    <input type="hidden" name="clientId" value="<%= clientId%>"></input>
                    <input type="hidden" name="redirectURI" value="<%= redirectURI%>"></input>
                    <input type="hidden" name="state" value="<%= state%>"></input>
                    <ul>
                        <% for( var index =0; index<scope.length; index++) {%>
                        <li> <%= scope[index] %></li>
                        <% } %>
                    </ul>
                    <% for( var index =0; index<scope.length; index++) {%>
                        <input type="hidden" name="scope" value="<%= scope[index]%>"></input>
                    <% } %>

                    <input name="status" type="submit" class="btn-small btn-primary" value="Grant"></input>
                    <input name="status" type="submit" class="btn-small btn-primary" value="Deny"></input>
                    <% } %>
                </form>
            </div>
        </div>
</div>

<hr></hr>

